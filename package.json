{
  "name": "vn-traffic-violation-lookup",
  "version": "1.0.0",
  "description": "Vietnam traffic violation lookup tool with automatic captcha solving (Tesseract OCR + Autocaptcha API).",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/main.ts",
    "server": "ts-node -r tsconfig-paths/register src/server.ts",
    "cli": "ts-node -r tsconfig-paths/register src/index.ts",
    "test": "ts-node -r tsconfig-paths/register src/index.ts 51K67179 1",
    "test:worker-pool": "ts-node -r tsconfig-paths/register src/test-worker-pool.ts",
    "start:prod": "node -r tsconfig-paths/register dist/main.js",
    "server:prod": "node -r tsconfig-paths/register dist/server.js",
    "cli:prod": "node -r tsconfig-paths/register dist/index.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "author": "Nhat Cuong",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.12.2",
    "axios-cookiejar-support": "^2.0.1",
    "cheerio": "^1.0.0-rc.12",
    "cookie": "^0.5.0",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "node-cron": "^4.2.1",
    "node-telegram-bot-api": "^0.66.0",
    "sharp": "^0.33.2",
    "tesseract.js": "^6.0.1",
    "tough-cookie": "^4.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.0.0",
    "@types/node-telegram-bot-api": "^0.64.11",
    "@types/sharp": "^0.32.0",
    "@types/tough-cookie": "^4.0.5",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.0"
  }
}
